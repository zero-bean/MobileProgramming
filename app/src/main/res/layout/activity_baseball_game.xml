<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameBaseballActivity"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@drawable/img_baseball_background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="50"
        android:layout_margin="10dp"
        android:background="@drawable/img_baseball_logo"
        android:id="@+id/scroll_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:background="#B4FDFDFD"
                tools:ignore="HardcodedText"
                android:id="@+id/hit_count"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textColor="#000000"
                android:textSize="35sp"
                android:fontFamily="@font/digital_7"
                android:background="#B4FDFDFD"
                tools:ignore="HardcodedText"
                android:id="@+id/result_text_view"/>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="15"
        android:orientation="horizontal"
        android:weightSum="100">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/img_baseball_baseball"
            android:textSize="100sp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/digital_7"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_0"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/img_baseball_baseball"
            android:textSize="100sp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/digital_7"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_1"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/img_baseball_baseball"
            android:textSize="100sp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/digital_7"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_2"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="25"
            android:background="@drawable/img_baseball_baseball"
            android:textSize="100sp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/digital_7"
            android:layout_margin="5dp"
            android:id="@+id/input_text_view_3"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="120"
        android:layout_margin="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_1"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="40sp"
            android:contentDescription="@string/number_1_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_1"
            android:enabled="true"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_2"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="35sp"
            android:contentDescription="@string/number_2_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_2"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_3"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="35sp"
            android:contentDescription="@string/number_3_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_3"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_4"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="35sp"
            android:contentDescription="@string/number_4_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_4"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_5"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="35sp"
            android:contentDescription="@string/number_5_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_5"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:textSize="35sp"
            android:contentDescription="@string/backspace_desc"
            android:id="@+id/back_space_button"
            android:src="@drawable/icon_baseline_backspace_24"
            style="?android:attr/borderlessButtonStyle"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="horizontal"
        android:weightSum="120"
        android:layout_margin="5dp">

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_6"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="40sp"
            android:contentDescription="@string/number_6_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_6"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_7"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="35sp"
            android:contentDescription="@string/number_7_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_7"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_8"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="35sp"
            android:contentDescription="@string/number_8_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_8"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_9"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="35sp"
            android:contentDescription="@string/number_9_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_9"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:text="@string/number_0"
            android:background="@drawable/num_button_select"
            android:textColor="#ffffff"
            android:fontFamily="@font/digital_7"
            android:textSize="35sp"
            android:contentDescription="@string/number_0_desc"
            style="?android:attr/borderlessButtonStyle"
            android:id="@+id/num_button_0"/>

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            android:background="@drawable/num_button_select"
            android:contentDescription="@string/hitbutton_desc"
            android:id="@+id/hit_button"
            android:src="@drawable/img_baseball_hitter"
            android:scaleType="centerInside"
            android:padding="10dp"/>
    </LinearLayout>
</LinearLayout>