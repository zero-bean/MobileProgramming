<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileChangeDialog"
    android:layout_width="312dp"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_button_container_on"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/profileChangeImageView"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="5dp"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/img_profile_default" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profileChangeUploadButton"
        android:layout_width="170dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:text="사진 업로드"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/profileChangeNameEditText"
        android:layout_marginTop="5dp"
        android:layout_width="250dp"
        android:layout_height="42dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:hint="@string/profile_change_name_placeholder"
        android:textColor="@color/primary_on" />

    <LinearLayout
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginVertical="20dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profileChangeConfirmButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_button_container_on"
            android:backgroundTint="@color/primary_container"
            android:text="변경"
            android:textColor="@color/primary_container_on"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Space
            android:layout_width="87dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/profileChangeCancleButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/rectangle_button_container_on"
            android:backgroundTint="#f70000"
            android:text="취소"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </LinearLayout>

</LinearLayout>